@model MovApp.ViewModels.MoviesViewModel

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Movie</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Name_org)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name_org)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Premiere)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Premiere)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Genres)
        </dt>

        <dd>
            @foreach (var item in Model.Genres)
            {
                if (item.Checked)
                {
                    @item.Name;
                    <text> &nbsp;</text>
                    @:&nbsp;
                                    }
                                }
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.MovieId }) |
    @Html.ActionLink("Back to List", "Index")
</p>
